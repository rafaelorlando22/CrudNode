<div class="container">
    <br />
    <!-- Importante indicar el path donde se encuentra el metodo POST -->
    <form action="/productoForm/producto/operar" method="POST">
        <input type="hidden" name="_id" value="{{producto._id}}"/>
        <div class="form-group">
            <label for="Nombre">Nombre:</label>
            <input type="nombre" class="form-control" id="nombre" name="nombre" value="{{producto.nombre}}">
        </div>
        <div class="form-group">
            <label for="descripcion">Descripcion:</label>
            <input type="text" class="form-control" id="descripcion" name="descripcion" value="{{producto.descripcion}}">
        </div>
        <div class="form-group">
            <label for="precio">Precio:</label>
            <input type="number" class="form-control" id="precio" name="precio" value="{{producto.precio}}">
        </div>
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <a href="/" class="btn btn-danger">Cancelar</a>
    </form>
</div>